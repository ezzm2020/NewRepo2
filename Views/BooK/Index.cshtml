@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Index";
}

 
<br />
<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>
<table class="table table-bordered table-striped table-hover " >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descroption)
            </th>
            <th>
                Name of author

            </th>

            <th>
              Image

            </th>

            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descroption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.author.FullName)
            </td>
            <td>
                @if (item.ImageUrl != null)
                {
                    <img src="~/uploads/@item.ImageUrl" style="width:65px;" class="img-thumbnail" />
                }

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
